<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maizi.rico.demo.client_server_data_exchange"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <!-- 访问server，开权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 开读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.shen.client.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shen.client.ui.LoginActivity" />
        <activity android:name="com.shen.client.ui.RegisterActivity" />
        <activity android:name="com.shen.client.ui.StudentActivity" />
        <activity android:name="com.shen.client.ui.ImageViewActivity" />
        <activity android:name="com.shen.client.ui.UploadActivity" />
        <activity android:name="com.shen.client.ui.DownloadActivity" />
    </application>

</manifest>